<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="480.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Bartinator.Controller.employeeManageMenuController">
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
             <VBox alignment="CENTER" fillWidth="false" minWidth="150.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                <children>
                    <TextField fx:id="usernameField" promptText="Username" />
                    <PasswordField fx:id="passwordField" promptText="Password" />
                    <TextField fx:id="nameField" promptText="Name" />
                    <CheckBox fx:id="adminCheckBox" text="Is admin?" />
                </children>
             </VBox>
              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                  <padding>
                      <Insets top="10.0" />
                  </padding>
                 <children>
                     <Button onAction="#handleSaveUser" text="Save" textAlignment="CENTER" />
                     <Button onAction="#handleDelete" text="Delete" textAlignment="CENTER" />
                 </children>
              </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <center>
      <TableView fx:id="employeeTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="nameCol" prefWidth="75.0" text="First Name" />
          <TableColumn fx:id="usernameCol" prefWidth="75.0" text="Last Name" />
        </columns>
      </TableView>
   </center>
</BorderPane>
