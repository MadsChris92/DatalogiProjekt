                                                        AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                        AnchorPane.topAnchor="0.0"/>
                                                <TextField fx:id="columnTxtField" promptText="Add Column"
                                                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                           AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="0.0"/>
                                            </children>
                                        </AnchorPane>
                                    </top>
                                    <bottom>
                                        <Button fx:id="columnRemoveButton" alignment="CENTER" contentDisplay="RIGHT"
                                                disable="true" mnemonicParsing="false" onAction="#handleRemoveColumn"
                                                prefHeight="40.0" prefWidth="400.0" text="Remove"
                                                BorderPane.alignment="CENTER">
                                            <graphic>
                                                <Label fx:id="columnLabel" alignment="CENTER" text="Label"/>
                                            </graphic>
                                        </Button>
                                    </bottom>
                                    <center>
                                        <ListView fx:id="columnView" minHeight="100.0" BorderPane.alignment="CENTER"/>
                                    </center>
                                </BorderPane>
                            </content>
                        </TitledPane>
                    </items>
                </SplitPane>
                <BorderPane>
                    <center>
                        <TitledPane animated="false" collapsible="false" contentDisplay="RIGHT" text="Products in"
