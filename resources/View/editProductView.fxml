                <SplitPane dividerPositions="0.5" maxWidth="400.0" minWidth="200.0" orientation="VERTICAL"
                           prefWidth="200.0">
                    <items>
                        <TitledPane animated="false" text="Categories">
                            <content>
                                <BorderPane>
                                    <padding>
                                        <Insets bottom="0" left="0" right="0" top="0"/>
