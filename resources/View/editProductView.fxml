                                    <children>
                                        <Button graphicTextGap="6.0" mnemonicParsing="false"
                                                onAction="#handleAddProduct" prefWidth="50.0" text="Add"
                                                AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                AnchorPane.topAnchor="0.0"/>
                                        <TextField fx:id="productTxtField" promptText="Product Name"
                                                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                   AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="0.0"/>
                                    </children>
                                </AnchorPane>
                                <Button mnemonicParsing="false" onAction="#handleRemoveProduct" prefHeight="40.0"
                                        text="Remove Product"/>
                                <Button layoutX="207.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleRefresh"
                                        prefHeight="40.0" text="Refresh Products"/>
                            </items>
                        </ToolBar>
                    </bottom>
                </BorderPane>
            </items>
