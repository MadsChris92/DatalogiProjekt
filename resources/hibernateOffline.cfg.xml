
<hibernate-configuration>
    <session-factory>
        <!-- MainDataAccessObject connection setting -->
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:./h2/database</property>
        <property name="connection.username">martin</property>
        <property name="connection.password">skole</property>

        <!-- SQL Dialect -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Update the database schema on application startup -->
        <property name="hbm2ddl.auto">update</property>

        <!--property name="show_sql">true</property -->

        <!-- Names the annotated entity classes -->
        <mapping class="Bartinator.Model.Employee"/>
        <mapping class="Bartinator.Model.Product"/>
        <mapping class="Bartinator.Model.Order"/>
        <mapping class="Bartinator.Model.Category"/>

    </session-factory>
</hibernate-configuration>